{% extends 'base.html.twig' %}

{% block title %}OrderProduct{% endblock %}

{% block body %}
    <h1>order_productProduct</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>ID</th><td>{{ order_product.id }}</td>
            </tr>
            <tr>
                <th>Date</th><td>{{ order_product.created_at|date("d-m-Y") }}</td>
            </tr>
            <tr>
                <th>Marketplace</th><td>{{ order_product.marketplace }}</td>
            </tr>
            <tr>
                <th>Quantité</th><td>{{ order_product.qte }}</td>
            </tr>
            <tr>
                <th>Label</th><td>{{ order_product.label }}</td>
            </tr>
            <tr>
                <th>Prix</th><td>{{ order_product.price }}</td>
            </tr>
            <th>Référence</th><td>{{ order_product.ref }}</td>
