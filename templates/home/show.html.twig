{% extends 'base.html.twig' %}

{% block title %}Hello HomeController!{% endblock %}

{% block body %}
    <table class="table">
        <tbody>
        <tr>
            <th>ID</th><td>{{ order.id }}</td>
        </tr>
        <tr>
            <th>Date</th><td>{{ order.created_at|date("d-m-Y") }}</td>
        </tr>
        <tr>
            <th>Marketplace</th><td>{{ order.marketplace }}</td>
        </tr>
        <tr>
            <th>Quantité</th><td>{{ order.qte }}</td>
        </tr>
        <tr>
            <th>Label</th><td>{{ order.label }}</td>
        </tr>
        <tr>
            <th>Prix</th><td>{{ order.price }}</td>
        </tr>
            <th>Référence</th><td>{{ order.ref }}</td>
        <tr>
            <th>Nom & Prénom</th><td>{{ order.firstname }}  {{ order.lastname }}</td>
        </tr>
        <tr>
            <th>Email</th><td>{{ order.email }}</td>
        </tr>
        <tr>
            <th>Adresse</th><td>{{ order.street }}  {{ order.zip }} {{ order.city }}</td>
        </tr>
        </tbody>
    </table>
{% endblock %}
